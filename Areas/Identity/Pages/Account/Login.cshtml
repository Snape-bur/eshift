@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100 px-6 py-12">
    <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg">
        <h2 class="text-3xl font-bold text-center text-gray-800 mb-6">Log in to your account</h2>
        <form id="account" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-sm text-red-600" role="alert"></div>
            <div class="mb-4">
                <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700">Email</label>
                <input asp-for="Input.Email" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-sm text-red-600"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700">Password</label>
                <input asp-for="Input.Password" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" autocomplete="current-password" aria-required="true" placeholder="password" />
                <span asp-validation-for="Input.Password" class="text-sm text-red-600"></span>
            </div>
            <div class="flex items-center mb-4">
                <input asp-for="Input.RememberMe" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" />
                <label asp-for="Input.RememberMe" class="ml-2 block text-sm text-gray-700">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
            </div>
            <button type="submit" class="w-full py-2 px-4 bg-indigo-600 text-white font-semibold rounded-lg shadow hover:bg-indigo-700 transition duration-300">Log in</button>
        </form>

        <div class="mt-6 text-center space-y-2">
            <p class="text-sm text-gray-600">
                <a href="/Identity/Account/ForgotPassword" class="text-indigo-600 hover:text-indigo-800 font-medium">Forgot your password?</a>

            </p>
            <p class="text-sm text-gray-600">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-indigo-600 hover:text-indigo-800 font-medium">Register as a new user</a>
            </p>
            <p class="text-sm text-gray-600">
                <a asp-page="./ResendEmailConfirmation" class="text-indigo-600 hover:text-indigo-800 font-medium">Resend email confirmation</a>
            </p>
        </div>

        <div class="mt-6">
            <h3 class="text-lg font-medium text-gray-800 text-center">Use another service to log in</h3>
            <hr class="my-4 border-gray-300" />
            @if ((Model.ExternalLogins?.Count ?? 0) == 0)
            {
                <p class="text-sm text-gray-600 text-center">
                    There are no external authentication services configured. See this
                    <a href="https://go.microsoft.com/fwlink/?LinkID=532715" class="text-indigo-600 hover:text-indigo-800 font-medium">article about setting up this ASP.NET application to support logging in via external services</a>.
                </p>
            }
            else
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="flex flex-wrap justify-center gap-4">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="py-2 px-4 bg-indigo-600 text-white font-semibold rounded-lg shadow hover:bg-indigo-700 transition duration-300" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                    }
                </form>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}