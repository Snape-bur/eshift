@page
@model RegisterModel


@{
    ViewData["Title"] = "Register";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100 px-6 py-12">
    <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg">
        <h2 class="text-3xl font-bold text-center text-gray-800 mb-6">Create your account</h2>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-6">
            <div>
                <label asp-for="Input.FullName" class="block text-sm font-medium text-gray-700">
                    Full Name <span class="text-red-500">*</span>
                </label>
                <input asp-for="Input.FullName" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="Input.FullName" class="text-sm text-red-600"></span>
            </div>
            <div>
                <label asp-for="Input.PhoneNumber" class="block text-sm font-medium text-gray-700">
                    Phone Number <span class="text-red-500">*</span>
                </label>
                <input asp-for="Input.PhoneNumber" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="Input.PhoneNumber" class="text-sm text-red-600"></span>
            </div>
            <div>
                <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700">
                    Email <span class="text-red-500">*</span>
                </label>
                <input asp-for="Input.Email" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="Input.Email" class="text-sm text-red-600"></span>
            </div>
            <div>
                <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700">
                    Password <span class="text-red-500">*</span>
                </label>
                <input asp-for="Input.Password" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="Input.Password" class="text-sm text-red-600"></span>
            </div>
            <div>
                <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700">
                    Confirm Password <span class="text-red-500">*</span>
                </label>
                <input asp-for="Input.ConfirmPassword" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-sm text-red-600"></span>
            </div>
            <div>
                <label asp-for="Input.Address" class="block text-sm font-medium text-gray-700">
                    Address
                </label>
                <input asp-for="Input.Address" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="Input.Address" class="text-sm text-red-600"></span>
            </div>
            <button type="submit" class="w-full py-2 px-4 bg-indigo-600 text-white font-semibold rounded-lg shadow hover:bg-indigo-700 transition duration-300">
                Register
            </button>
        </form>
        <div class="mt-6 text-center">
            <p class="text-sm text-gray-600">
                Already have an account?
                <a asp-page="/Account/Login" class="text-indigo-600 hover:text-indigo-800 font-medium">Log in</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}