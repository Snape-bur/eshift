@model EShift.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white rounded-xl shadow-lg p-6">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800 flex items-center">
                <i class="fas fa-trash mr-2 text-red-500"></i>Delete Customer
            </h2>
            <a asp-action="Index" class="gradient-btn text-white px-4 py-2 rounded-lg shadow hover:shadow-lg transition duration-300 ease-in-out">
                <i class="fas fa-arrow-left mr-2"></i>Back to List
            </a>
        </div>
        <hr />
        <div class="alert alert-danger mb-6">
            <p class="text-lg">Are you sure you want to delete this customer?</p>
        </div>
        <dl class="row">
            <dt class="col-sm-3">Full Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>
            <dt class="col-sm-3">Phone Number</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PhoneNumber)</dd>
            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>
            <dt class="col-sm-3">App User ID</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.AppUserId)</dd>
        </dl>
        <form asp-action="Delete" class="mt-6">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger mr-2">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>