@using EShift.Models
@model IEnumerable<Customer>

@{
    ViewData["Title"] = "Customer List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var currentFilter = ViewData["CurrentFilter"] as string ?? "";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white rounded-xl shadow-lg p-6">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800 flex items-center">
                <i class="fas fa-users mr-2 text-blue-500"></i>Customer List
            </h2>
            <a asp-action="Create" class="gradient-btn text-white px-4 py-2 rounded-lg shadow hover:shadow-lg transition duration-300 ease-in-out">
                <i class="fas fa-plus mr-2"></i>Create New Customer
            </a>
        </div>

        <!-- Search Bar -->
        <form method="get" asp-action="Index" class="mb-6">
            <div class="flex gap-3 items-center max-w-lg">
                <input type="text" name="searchTerm" value="@currentFilter"
                       placeholder="Search by name, phone, username, or email..."
                       class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-300" />
                <button type="submit"
                        class="gradient-btn text-white px-4 py-2 rounded-md flex items-center gap-1">
                    <i class="fas fa-search"></i> Search
                </button>
            </div>
        </form>

        @if (!Model.Any())
        {
            <p class="text-gray-500 text-center py-10 text-lg">No customers found. Try adjusting your search or create a new one.</p>
        }
        else
        {
            <div class="overflow-x-auto">
                <table class="w-full text-left text-gray-700">
                    <thead class="bg-gray-100 text-xs uppercase text-gray-600">
                        <tr>
                            <th class="px-6 py-4 rounded-tl-lg">Full Name</th>
                            <th class="px-6 py-4">Phone Number</th>
                            <th class="px-6 py-4">Address</th>
                            <th class="px-6 py-4">User Name</th>
                            <th class="px-6 py-4">Email</th>
                            <th class="px-6 py-4 rounded-tr-lg">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-6 py-4">@Html.DisplayFor(modelItem => item.FullName)</td>
                                <td class="px-6 py-4">@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                <td class="px-6 py-4">@Html.DisplayFor(modelItem => item.Address)</td>
                                <td class="px-6 py-4">@item.AppUser?.UserName</td>
                                <td class="px-6 py-4">@item.AppUser?.Email</td>
                                <td class="px-6 py-4 space-x-2">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="text-blue-500 hover:text-blue-700 hover:underline">Details</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-green-500 hover:text-green-700 hover:underline">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-500 hover:text-red-700 hover:underline">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
