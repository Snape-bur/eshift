@model EShift.Models.Customer

@{
    ViewData["Title"] = "Create Customer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white rounded-xl shadow-lg p-6">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800 flex items-center">
                <i class="fas fa-user-plus mr-2 text-blue-500"></i>Create Customer
            </h2>
            <a asp-action="Index" class="gradient-btn text-white px-4 py-2 rounded-lg shadow hover:shadow-lg transition duration-300 ease-in-out">
                <i class="fas fa-arrow-left mr-2"></i>Back to List
            </a>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-4">
                        <label asp-for="FullName" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="FullName" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" />
                        <span asp-validation-for="FullName" class="text-red-500 text-sm"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="PhoneNumber" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" />
                        <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="Address" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="Address" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" />
                        <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="AppUserId" class="block text-sm font-medium text-gray-700"></label>
                        <select asp-for="AppUserId" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" asp-items="ViewBag.AppUserId"></select>
                        <span asp-validation-for="AppUserId" class="text-red-500 text-sm"></span>
                    </div>
                    <div class="mt-6">
                        <button type="submit" class="gradient-btn text-white px-4 py-2 rounded-lg shadow hover:shadow-lg">Create</button>
                        <a asp-action="Index" class="text-blue-500 hover:text-blue-700 hover:underline ml-4">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}