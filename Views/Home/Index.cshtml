<!-- Hero Section -->
<section class="pt-28 relative text-white text-center" style="background-image: url('https://images.pexels.com/photos/7464705/pexels-photo-7464705.jpeg'); background-size: cover; background-position: center; background-attachment: fixed; height: 100vh;">
    <div class="absolute inset-0 bg-black bg-opacity-70 z-0"></div>
    <div class="relative z-10 max-w-7xl mx-auto px-4 text-center flex flex-col justify-center items-center h-full">
