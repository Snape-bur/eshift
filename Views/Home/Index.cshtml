}

<!-- Navigation Bar -->
<section class="fixed top-0 left-0 right-0 bg-gray-900 text-white z-50 shadow-md">
    <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
        <div class="flex items-center space-x-3">
            <img src="@Url.Content("~/images/logo.png")" class="h-8 w-8" alt="e-Shift Logo" loading="lazy">
            <span class="text-red-500 font-bold text-xl">e-Shift</span>
        </div>
        <div class="flex items-center space-x-4">
            <nav class="hidden md:flex space-x-6 items-center">
                <a href="#services" class="hover:text-red-400">Services</a>
                <a href="#how-it-works" class="hover:text-red-400">How It Works</a>
                <a href="#testimonials" class="hover:text-red-400">Testimonials</a>
                <a href="#track" class="hover:text-red-400">Track Job</a>
