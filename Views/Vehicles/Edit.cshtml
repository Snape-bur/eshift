@using EShift.Models
@model EShift.Models.Vehicle

@{
    ViewData["Title"] = "Edit Vehicle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-2xl mx-auto mt-8">
    @* Adjusted max-w-2xl and mt-8 for consistency with Create.cshtml *@
    <div class="bg-white rounded-xl shadow-lg p-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
            @* Adjusted heading for consistency *@
            <i class="fas fa-car mr-2 text-blue-500"></i>Edit Vehicle @* Added text-blue-500 for icon color consistency *@
        </h2>

        <form asp-action="Edit" class="space-y-5">
            @* Adjusted space-y-5 for consistency *@
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>
            <input type="hidden" asp-for="VehicleId" />
            @* Removed grid-cols-1 gap-6 as Create.cshtml doesn't use it directly on the main form fields container *@

            <div>
                <label asp-for="Type" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <select asp-for="Type" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                        asp-items="Html.GetEnumSelectList<VehicleType>()">
                    <option value="">-- Select Vehicle Type --</option>
                </select>
                <span asp-validation-for="Type" class="text-red-500 text-sm mt-1 block"></span> @* Adjusted mt-1 block *@
            </div>
            <div>
                <label asp-for="Make" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Make" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                <span asp-validation-for="Make" class="text-red-500 text-sm mt-1 block"></span> @* Adjusted mt-1 block *@
            </div>
            <div>
                <label asp-for="Model" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Model" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                <span asp-validation-for="Model" class="text-red-500 text-sm mt-1 block"></span> @* Adjusted mt-1 block *@
            </div>
            <div>
                <label asp-for="Color" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Color" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                <span asp-validation-for="Color" class="text-red-500 text-sm mt-1 block"></span> @* Adjusted mt-1 block *@
            </div>
            <div>
                <label asp-for="CapacityCubicFeet" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="CapacityCubicFeet" type="number" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" /> @* Added type="number" for consistency *@
                <span asp-validation-for="CapacityCubicFeet" class="text-red-500 text-sm mt-1 block"></span> @* Adjusted mt-1 block *@
            </div>
            <div>
                <label asp-for="Status" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <select asp-for="Status" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                        asp-items="Html.GetEnumSelectList<VehicleStatus>()">
                    <option value="">-- Select Status --</option>
                </select>
                <span asp-validation-for="Status" class="text-red-500 text-sm mt-1 block"></span> @* Adjusted mt-1 block *@
            </div>
            <div>
                <label asp-for="LicensePlate" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="LicensePlate" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                <span asp-validation-for="LicensePlate" class="text-red-500 text-sm mt-1 block"></span> @* Adjusted mt-1 block *@
            </div>

            <div class="flex justify-end">
                @* Adjusted for consistency *@
                <button type="submit" class="gradient-btn text-white px-6 py-2 rounded-lg shadow hover:shadow-lg transition-all">
                    @* Adjusted to button type="submit" and removed space-x-4 *@
                    <i class="fas fa-check mr-2"></i>Save Vehicle
                </button>
            </div>
        </form>
    </div>

    <div class="text-center mt-4">
        @* Adjusted for consistency *@
        <a asp-action="Index" class="text-blue-500 hover:text-blue-700 hover:underline transition-colors">
            @* Adjusted for consistency *@
            <i class="fas fa-arrow-left mr-2"></i>Back to Vehicle List
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}