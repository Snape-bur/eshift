@using EShift.Models
@model IEnumerable<EShift.Models.Vehicle>

@{
    ViewData["Title"] = "Manage Vehicles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var currentFilter = ViewData["CurrentFilter"] as string ?? "";
}

<div class="max-w-7xl mx-auto">
    <div class="bg-white rounded-xl shadow-lg p-6">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800"><i class="fas fa-car mr-2"></i>Manage Vehicles</h2>
            <a asp-action="Create" class="gradient-btn text-white px-4 py-2 rounded-lg shadow hover:shadow-lg">
                <i class="fas fa-plus mr-2"></i>Create New Vehicle
            </a>
        </div>

        <!-- Search Bar -->
        <form method="get" asp-action="Index" class="mb-6">
            <div class="flex gap-3 items-center max-w-lg">
                <input type="text" name="searchTerm" value="@currentFilter"
                       placeholder="Search by type, plate or make"
                       class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-300" />
                <button type="submit"
                        class="gradient-btn text-white px-4 py-2 rounded-md flex items-center gap-1">
                    <i class="fas fa-search"></i> Search
                </button>
            </div>
        </form>

        @if (!Model.Any())
        {
            <p class="text-gray-500 text-center py-6">No vehicles found. Try searching or add one.</p>
        }
        else
        {
            <div class="overflow-x-auto">
                <table class="w-full text-left text-gray-700">
                    <thead class="bg-gray-100 text-xs uppercase text-gray-600">
                        <tr>
                            <th class="px-6 py-4 rounded-tl-lg">@Html.DisplayNameFor(model => model.Type)</th>
                            <th class="px-6 py-4">@Html.DisplayNameFor(model => model.Make)</th>
                            <th class="px-6 py-4">@Html.DisplayNameFor(model => model.Model)</th>
                            <th class="px-6 py-4">@Html.DisplayNameFor(model => model.Color)</th>
                            <th class="px-6 py-4">@Html.DisplayNameFor(model => model.CapacityCubicFeet)</th>
                            <th class="px-6 py-4">@Html.DisplayNameFor(model => model.Status)</th>
                            <th class="px-6 py-4">@Html.DisplayNameFor(model => model.LicensePlate)</th>
                            <th class="px-6 py-4 rounded-tr-lg">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-6 py-4">@item.Type</td>
                                <td class="px-6 py-4">@item.Make</td>
                                <td class="px-6 py-4">@item.Model</td>
                                <td class="px-6 py-4">@item.Color</td>
                                <td class="px-6 py-4">@item.CapacityCubicFeet</td>
                                <td class="px-6 py-4">@item.Status</td>
                                <td class="px-6 py-4">@item.LicensePlate</td>
                                <td class="px-6 py-4 space-x-3">
                                    <a asp-action="Details" asp-route-id="@item.VehicleId" class="text-blue-500 hover:text-blue-700 hover:underline">Details</a>
                                    <a asp-action="Edit" asp-route-id="@item.VehicleId" class="text-green-500 hover:text-green-700 hover:underline">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.VehicleId" class="text-red-500 hover:text-red-700 hover:underline">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
