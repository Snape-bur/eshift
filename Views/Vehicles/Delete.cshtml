@using EShift.Models
@model EShift.Models.Vehicle

@{
    ViewData["Title"] = "Delete Vehicle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-7xl mx-auto">
    <div class="bg-white rounded-xl shadow-lg p-6">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800"><i class="fas fa-trash-alt mr-2"></i>Delete Vehicle</h2>
            <a asp-action="Index" class="text-blue-500 hover:text-blue-700 hover:underline"><i class="fas fa-arrow-left mr-2"></i>Back to List</a>
        </div>

        <h3 class="text-lg font-medium text-gray-900 mb-4">Are you sure you want to delete this vehicle?</h3>

        <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Type)</dt>
                <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.Type)</dd>
            </div>
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Make)</dt>
                <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.Make)</dd>
            </div>
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Model)</dt>
                <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.Model)</dd>
            </div>
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Color)</dt>
                <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.Color)</dd>
            </div>
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.CapacityCubicFeet)</dt>
                <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.CapacityCubicFeet)</dd>
            </div>
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Status)</dt>
                <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.Status)</dd>
            </div>
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.LicensePlate)</dt>
                <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.LicensePlate)</dd>
            </div>
        </dl>

        <form asp-action="Delete" class="mt-6 flex space-x-4">
            <input type="hidden" asp-for="VehicleId" />
            <input type="submit" value="Delete" class="bg-red-500 text-white px-4 py-2 rounded-lg shadow hover:bg-red-600 cursor-pointer" />
            <a asp-action="Index" class="text-blue-500 hover:text-blue-700 hover:underline">Cancel</a>
        </form>
    </div>
</div>