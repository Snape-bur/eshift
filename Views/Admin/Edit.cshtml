@model EShift.ViewModels.EditAdminViewModel

@{
    ViewData["Title"] = "Edit Admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-7xl mx-auto">
    <div class="bg-white rounded-xl shadow-lg p-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Edit Admin</h2>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="AppUserId" />
            <div class="mb-4">
                <label asp-for="FullName" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="FullName" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" />
                <span asp-validation-for="FullName" class="text-red-500 text-sm"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Department" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Department" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" />
                <span asp-validation-for="Department" class="text-red-500 text-sm"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>
            <div class="mt-6">
                <button type="submit" class="gradient-btn text-white px-4 py-2 rounded-lg shadow hover:shadow-lg">Save</button>
                <a asp-action="Index" class="text-blue-500 hover:text-blue-700 hover:underline ml-4">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}