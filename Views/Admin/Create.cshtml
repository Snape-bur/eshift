@model EShift.ViewModels.AddAdminViewModel

@{
    ViewData["Title"] = "Create Admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-2xl mx-auto mt-8">
    <div class="bg-white rounded-xl shadow-lg p-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
            <i class="fas fa-user-plus mr-2 text-blue-500"></i>Create Admin
        </h2>

        <form asp-action="Create" method="post" novalidate class="space-y-5">
            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                <span asp-validation-for="Email" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Password" type="password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                <span asp-validation-for="Password" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div>
                <label asp-for="FullName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="FullName" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                <span asp-validation-for="FullName" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div>
                <label asp-for="Department" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Department" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                <span asp-validation-for="Department" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div class="flex justify-end">
                <button type="submit" class="gradient-btn text-white px-6 py-2 rounded-lg shadow hover:shadow-lg transition-all">
                    <i class="fas fa-check mr-2"></i>Create Admin
                </button>
            </div>
        </form>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="text-blue-500 hover:text-blue-700 hover:underline transition-colors">
            <i class="fas fa-arrow-left mr-2"></i>Back to Admin List
        </a>
    </div>
</div>