@using EShift.Models
@model Admin

@{
    ViewData["Title"] = "Admin Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-7xl mx-auto">
    <div class="bg-white rounded-xl shadow-lg p-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Admin Details</h2>
        <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-500">Full Name</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.FullName</dd>
            </div>
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-500">Department</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.Department</dd>
            </div>
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-500">Email</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.AppUser?.Email</dd>
            </div>
        </dl>
        <div class="mt-6">
            <a asp-action="Edit" asp-route-id="@Model.AppUserId" class="text-green-500 hover:text-green-700 hover:underline mr-4">Edit</a>
            <a asp-action="Index" class="text-blue-500 hover:text-blue-700 hover:underline">Back to List</a>
        </div>
    </div>
</div>