@using EShift.Models
@model IEnumerable<EShift.Models.Assistant>

@{
    ViewData["Title"] = "Manage Assistants";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var currentFilter = ViewData["CurrentFilter"] as string ?? "";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white rounded-xl shadow-lg p-6">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800"><i class="fas fa-user-tie mr-2"></i>Manage Assistants</h2>
            <a asp-action="Create" class="gradient-btn text-white px-4 py-2 rounded-lg shadow hover:shadow-lg transition duration-300 ease-in-out">
                <i class="fas fa-plus mr-2"></i>Create New Assistant
            </a>
        </div>

        <!-- Search Bar -->
        <form method="get" asp-action="Index" class="mb-6">
            <div class="flex gap-3 items-center max-w-lg">
                <input type="text" name="searchTerm" value="@currentFilter"
                       placeholder="Search by name, phone"
                       class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-300" />
                <button type="submit"
                        class="gradient-btn text-white px-4 py-2 rounded-md flex items-center gap-1">
                    <i class="fas fa-search"></i> Search
                </button>
            </div>
        </form>

        @if (!Model.Any())
        {
            <p class="text-gray-500 text-center py-10 text-lg">No assistants found. Try searching or add one.</p>
        }
        else
        {
            <div class="overflow-x-auto rounded-lg border border-gray-200">
                <table class="w-full text-left text-gray-700">
                    <thead class="bg-gray-100 text-xs uppercase text-gray-600">
                        <tr>
                            <th class="px-6 py-4 rounded-tl-lg">@Html.DisplayNameFor(model => model.FullName)</th>
                            <th class="px-6 py-4">@Html.DisplayNameFor(model => model.Status)</th>
                            <th class="px-6 py-4">@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                            <th class="px-6 py-4 rounded-tr-lg text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-gray-50 transition-colors duration-150">
                                <td class="px-6 py-4">@item.FullName</td>
                                <td class="px-6 py-4">@item.Status</td>
                                <td class="px-6 py-4">@item.PhoneNumber</td>
                                <td class="px-6 py-4 text-center space-x-3">
                                    <a asp-action="Details" asp-route-id="@item.AssistantId" class="text-blue-600 hover:text-blue-800 font-medium hover:underline">Details</a>
                                    <a asp-action="Edit" asp-route-id="@item.AssistantId" class="text-green-600 hover:text-green-800 font-medium hover:underline">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.AssistantId" class="text-red-600 hover:text-red-800 font-medium hover:underline">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
