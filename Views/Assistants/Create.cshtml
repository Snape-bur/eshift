@using EShift.Models
@model EShift.Models.Assistant

@{
    ViewData["Title"] = "Create Assistant";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@* Ensure Font Awesome is linked in your _AdminLayout.cshtml for icons to display *@
@* For example, add the following line in the <head> section of _AdminLayout.cshtml: *@
@* <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"> *@

<div class="max-w-2xl mx-auto mt-8 px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-xl shadow-lg p-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
            <i class="fas fa-user-plus mr-2 text-blue-500"></i>Create New Assistant
        </h2>

        <form asp-action="Create" method="post" novalidate class="space-y-5">
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4 p-3 bg-red-50 rounded-lg border border-red-200"></div>

            <div>
                <label asp-for="FullName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="FullName" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                <span asp-validation-for="FullName" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div>
                <label asp-for="Status" class="block text-sm font-medium text-gray-700 mb-1"></label>
                @* Assuming AssistantStatus is an enum. If not, you'll need to populate the select list differently. *@
                <select asp-for="Status" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                        asp-items="Html.GetEnumSelectList<EShift.Models.AssistantStatus>()">
                    <option value="">Select Assistant Status</option>
                </select>
                <span asp-validation-for="Status" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div>
                <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="PhoneNumber" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div class="flex justify-end pt-4">
                <button type="submit" class="gradient-btn text-white px-6 py-2 rounded-lg shadow hover:shadow-lg transition-all">
                    <i class="fas fa-check mr-2"></i>Create Assistant
                </button>
            </div>
        </form>
    </div>

    <div class="text-center mt-6">
        <a asp-action="Index" class="text-blue-500 hover:text-blue-700 hover:underline transition-colors flex items-center justify-center">
            <i class="fas fa-arrow-left mr-2"></i>Back to Assistant List
        </a>
    </div>
</div>

<style>
    /* Add a custom gradient button style if not already defined in your CSS */
    .gradient-btn {
        background: linear-gradient(to right, #6366f1, #8b5cf6); /* Indigo to Violet */
        border: none;
    }

        .gradient-btn:hover {
            background: linear-gradient(to left, #6366f1, #8b5cf6); /* Reverse gradient on hover */
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
