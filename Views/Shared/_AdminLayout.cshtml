@{
    Layout = null;
    var title = ViewData["Title"] ?? "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - EShift Admin</title>

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        /* Custom styles for sidebar toggle and hover effects */
        .sidebar {
            transition: width 0.3s ease;
        }
        .sidebar-collapsed {
            width: 80px;
        }
        .sidebar-expanded {
            width: 250px;
        }
        .menu-text {
            transition: opacity 0.3s ease;
        }
        .sidebar-collapsed .menu-text {
            opacity: 0;
        }
        .sidebar-expanded .menu-text {
            opacity: 1;
        }
        .gradient-btn {
            background: linear-gradient(90deg, #3b82f6, #60a5fa);
            transition: background 0.3s ease;
        }
        .gradient-btn:hover {
            background: linear-gradient(90deg, #2563eb, #3b82f6);
        }
    </style>
</head>
<body class="bg-gray-100 font-sans">
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <div id="sidebar" class="sidebar sidebar-expanded bg-gradient-to-b from-gray-800 to-gray-900 text-white flex flex-col shadow-lg">
            <div class="flex items-center justify-between p-4 border-b border-gray-700">
                <div class="flex items-center space-x-3">
                    <i class="fas fa-box text-xl"></i>
                    <span class="text-lg font-bold menu-text">EShift Admin</span>
                </div>
                <button id="toggleSidebar" class="text-gray-400 hover:text-white focus:outline-none">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
            <nav class="flex-1">
                <a href="@Url.Action("Index", "AdminDashboard")" class="flex align-items-center p-4 hover:bg-gray-700 transition-colors">
                    <i class="fas fa-tachometer mr-3"></i>
                    <span class="menu-text">Dashboard</span>
                </a>
                <a href="@Url.Action("Index", "Admin")" class="flex items-center p-4 hover:bg-gray-700 transition-colors">
                    <i class="fas fa-user-shield mr-3"></i>
                    <span class="menu-text">Manage Admin</span>
                </a>
                <a href="@Url.Action("Index", "AdminJobs")" class="flex items-center p-4 hover:bg-gray-700 transition-colors">
                    <i class="fas fa-briefcase mr-3"></i> <span class="menu-text">Manage Jobs</span>
                </a>
                <a href="@Url.Action("Index", "AdminCustomer")" class="flex items-center p-4 hover:bg-gray-700 transition-colors">
                    <i class="fas fa-users mr-3"></i>
                    <span class="menu-text">Manage Customers</span>
                </a>
                <a href="@Url.Action("Index", "Vehicles")" class="flex items-center p-4 hover:bg-gray-700 transition-colors">
                    <i class="fas fa-car mr-3"></i>
                    <span class="menu-text">Manage Vehicles</span>
                </a>
                <a href="@Url.Action("Index", "Drivers")" class="flex align-items-center p-4 hover:bg-gray-700 transition-colors">
                    <i class="fas fa-user-tie mr-3"></i>
                    <span class="menu-text">Manage Drivers</span>
                </a>
                <a href="@Url.Action("Index", "Assistants")" class="flex align-items-baseline p-4 hover:bg-gray-700 transition-colors">
                    <i class="fas fa-hands-helping mr-3"></i>
                    <span class="menu-text">Manage Assistants</span>
                </a>

            </nav>
            <div class="p-4 border-t border-gray-700">
                <partial name="_LoginPartial" />
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col">
            <nav class="bg-white shadow-md p-4 flex items-center justify-between">
                <h1 class="text-xl font-semibold text-gray-800"><i class="fas fa-check-circle mr-2"></i>@title</h1>
            </nav>
            <main class="flex-1 p-6">
                @RenderBody()
            </main>
        </div>
    </div>

    <script>
        // Sidebar toggle functionality
        const sidebar = document.getElementById('sidebar');
        const toggleSidebar = document.getElementById('toggleSidebar');
        toggleSidebar.addEventListener('click', () => {
            sidebar.classList.toggle('sidebar-collapsed');
            sidebar.classList.toggle('sidebar-expanded');
        });
    </script>

    @RenderSection("Scripts", required: false)

    @section Scripts {
            <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>